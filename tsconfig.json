{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "types": ["node"],
    "moduleResolution": "NodeNext",

    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "sourceMap": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
